# SynapseFlow Environment Configuration

# Node Environment
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=10000
RATE_LIMIT_WINDOW=1 day

# HuggingFace API
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co

# AI Models
LLM_MODEL=meta-llama/Llama-3.1-70b
EMBEDDING_MODEL=BAAI/bge-m3
SUMMARIZATION_MODEL=facebook/bart-large-cnn
NER_MODEL=dslim/bert-base-NER
TABLE_QA_MODEL=google/tapas-base
IMAGE_CLASSIFICATION_MODEL=google/vit-base-patch16-224

# Database - AgentDB
AGENTDB_PATH=./data/agentdb

# Database - PostgreSQL
POSTGRES_URL=postgresql://postgres:password@localhost:5432/synapseflow

# Database - Redis
REDIS_URL=redis://localhost:6379

# Database - Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# MCP Server
MCP_SERVER_PORT=3001
MCP_SSE_ENABLED=true
MCP_STDIO_ENABLED=true

# Compute
GPU_ENABLED=false
COMPUTE_PARALLELISM=16

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
