{
  "name": "synapseflow",
  "version": "1.0.0",
  "description": "Self-Learning AI Research Assistant for Cross-Domain Knowledge Discovery",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "mcp-server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:mcp\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:mcp": "cd mcp-server && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../mcp-server && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "research",
    "assistant",
    "machine-learning",
    "nlp",
    "knowledge-discovery",
    "self-learning",
    "mcp",
    "multi-agent"
  ],
  "author": "Full-Stack AI Architect",
  "license": "MIT",
  "dependencies": {
    "claude-flow": "^2.7.31",
    "agentdb": "^1.6.1",
    "agentic-flow": "latest",
    "ruv-swarm": "latest",
    "strange-loops": "latest",
    "sublinear-toolkit": "latest",
    "federated-mcp": "latest"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
